{
  "name": "@api3/commons",
  "version": "0.0.0",
  "keywords": [],
  "license": "MIT",
  "engines": {
    "node": "^18.14.0",
    "pnpm": "^8.8.0"
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "clean": "rm -rf coverage dist",
    "dev": "nodemon --ext ts,js,json,env  --exec \"pnpm ts-node src/index.ts\"",
    "eslint:check": "eslint --report-unused-disable-directives --cache --ext js,ts,tsx,jsx . --max-warnings 0",
    "eslint:fix": "pnpm run eslint:check --fix",
    "prepare": "husky install",
    "prepublishOnly": "pnpm i && pnpm run build",
    "prettier:check": "prettier --check \"./**/*.{js,ts,md,json}\"",
    "prettier:fix": "prettier --write \"./**/*.{js,ts,md,json}\"",
    "test": "jest --passWithNoTests",
    "tsc": "tsc --project ."
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^6.2.1",
    "@typescript-eslint/parser": "^6.2.1",
    "eslint-config-next": "^13.1.6",
    "eslint-plugin-check-file": "^2.6.2",
    "eslint-plugin-cypress": "^2.14.0",
    "eslint-plugin-deprecation": "^2.0.0",
    "eslint-plugin-functional": "^6.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jest": "^27.4.2",
    "eslint-plugin-jest-formatting": "^3.1.0",
    "eslint-plugin-lodash": "^7.4.0",
    "eslint-plugin-no-only-tests": "^3.1.0",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.32.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-unicorn": "^48.0.1",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@types/lodash": "^4.14.199",
    "@types/node": "^20.8.0",
    "eslint": "^8.50.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "peerDependencies": {
    "eslint": "^8.50.0"
  }
}
