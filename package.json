{
  "name": "@api3/commons",
  "version": "0.12.0",
  "keywords": [],
  "license": "MIT",
  "engines": {
    "node": ">=18.14.0"
  },
  "sideEffects": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/api3dao/commons"
  },
  "files": [
    "dist",
    "src"
  ],
  "browser": "./dist/universal-index.js",
  "main": "./dist/node-index.js",
  "exports": {
    ".": {
      "browser": "./dist/universal-index.js",
      "default": "./dist/node-index.js"
    }
  },
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "clean": "rm -rf coverage dist",
    "eslint:check": "eslint --report-unused-disable-directives --cache --ext js,ts,tsx,jsx . --max-warnings 0",
    "eslint:fix": "pnpm run eslint:check --fix",
    "prepare": "husky",
    "prepublishOnly": "pnpm i && pnpm run clean && pnpm run build",
    "prettier:check": "prettier --check \"./**/*.{js,ts,md,json}\"",
    "prettier:fix": "prettier --write \"./**/*.{js,ts,md,json}\"",
    "release:tag": "ts-node src/scripts/tag-and-release.ts",
    "test": "jest",
    "tsc": "tsc --project ."
  },
  "dependencies": {
    "@api3/ois": "^2.3.2",
    "@api3/promise-utils": "^0.4.0",
    "@octokit/rest": "^20.1.1",
    "@octokit/types": "^13.5.0",
    "axios": "^1.7.4",
    "dotenv": "^16.4.5",
    "ethers": "^5.7.2",
    "lodash": "^4.17.21",
    "winston": "^3.14.2",
    "winston-console-format": "^1.0.8",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@api3/eslint-plugin-commons": "^2.0.1",
    "@types/jest": "^29.5.12",
    "@types/lodash": "^4.17.7",
    "@types/node": "^20.16.1",
    "eslint": "^8.57.0",
    "husky": "^9.1.4",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "ts-jest": "^29.2.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4"
  }
}
